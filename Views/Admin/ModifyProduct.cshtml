@using CoffeeShop.Models
@model Products

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Einstein Kaffee - Modify Product</title>
</head>
<body>
    @Html.Partial("NavigationBar")
    <center>
        @using (Html.BeginForm("SubmitProductModification", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Image)
            <table cellpadding="0" cellspacing="5">
                <tr>
                    <th colspan="2" align="center"><p/><img src="~/@Model.Image" width="120" height="120" alt="Product Image"></th>
                </tr>
                <tr>
                    <td>Product Name: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Name)
                    </td>
                </tr>
                <tr>
                    <td>Price: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Price)
                    </td>
                </tr>
                <tr>
                    <td>Discounted Price: </td>
                    <td>
                        @Html.TextBoxFor(m => m.DiscountedPrice)
                    </td>
                </tr>
                <tr>
                    <td>Rank: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Rank)
                    </td>
                </tr>
                <tr>
                    <td>Age Limited: </td>
                    <td>
                        @Html.DropDownListFor(m => m.AgeLimited, new SelectList(Enum.GetValues(typeof(ProductBoolean))), "Select an Option")
                    </td>
                </tr>
                <tr>
                    <td>Availability: </td>
                    <td>
                        @Html.DropDownListFor(m => m.Availability, new SelectList(Enum.GetValues(typeof(ProductBoolean))), "Select an Option")
                    </td>
                </tr>
                <tr>
                    <td>Category: </td>
                    <td>
                        @Html.DropDownListFor(m => m.Category, new SelectList(Enum.GetValues(typeof(ProductCategory))), "Select an Option")
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Save Changes" /></td>
                </tr>
            </table>
            if (@ViewBag.Message != null)
            {
                <div id="popupdiv" style="border: 1px solid red;">
                    @ViewBag.Message
                </div>
            }

            if (@TempData["Message"] != null)
            {
                <center>
                    <div id="popupdiv" style="border: 1px solid green;">
                        @TempData["Message"].ToString()
                    </div>
                </center>

            }
        }
    </center>
</body>
</html>
