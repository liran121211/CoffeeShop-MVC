@model CoffeeShop.Models.Users

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <center>
        @using (Html.BeginForm("SubmitRegistration", "Home", FormMethod.Post))
        {
        <table cellpadding="0" cellspacing="5">
            <tr>
                <th colspan="2" align="center">Register New Account</th>
            </tr>
            <tr>
                <td>First Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.FirstName)
                </td>
            </tr>
            <tr>
                <td>Last Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.LastName)
                </td>
            </tr>
            <tr>
                <td>Email: </td>
                <td>
                    @Html.TextBoxFor(m => m.Email)
                </td>
            </tr>
            <tr>
                <td>Username: </td>
                <td>
                    @Html.TextBoxFor(m => m.Username)
                </td>
            </tr>
            <tr>
                <td>Password: </td>
                <td>
                    @Html.TextBoxFor(m => m.Password)
                </td>
            </tr>
            <tr>
                <td>Age: </td>
                <td>
                    @Html.TextBoxFor(m => m.Age)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Register" /></td>
            </tr>
        </table>
        }
    </center>
</body>
</html>
