@model CoffeeShop.Models.Users

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login To Account</title>
</head>
<body>
    @Html.Partial("NavigationBar")
    <center>
        @using (Html.BeginForm("SubmitLogin", "Home", FormMethod.Post))
        {
            <table cellpadding="0" cellspacing="5">
                <tr>
                    <th colspan="2" align="center">VIP Login Page</th>
                </tr>
                <tr>
                    <td>Username: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Username)
                    </td>
                </tr>
                <tr>
                    <td>Password: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Password)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Login" /></td>
                </tr>
            </table>
            <center><p style="text-align: center;"><a href="~/Home/VipLogin"><span class="VIiyi" lang="en"><span class="JLqJ4b ChMk0b" data-language-for-alternatives="en" data-language-to-translate-into="iw" data-phrase-index="0" data-number-of-phrases="1">Are you a VIP member?</span></span> </a></p></center>
            if (@ViewBag.Message != null)
            {
                <div id="popupdiv" style="border: 1px solid red;">
                    @ViewBag.Message
                </div>
            }
        }
    </center>
</body>
</html>
